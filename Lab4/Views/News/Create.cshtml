@model Lab4.Models.ViewModels.FileInputViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Upload</h1>

<h4>Upload an add for @Model?.SportClubTitle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" asp-route-id="@Model.SportClubId" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="file" type="file">
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Upload Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id=@Model.SportClubId>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
